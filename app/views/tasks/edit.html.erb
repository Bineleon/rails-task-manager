<h1>Edit <%= @task.title %></h1>

<%= form_with model: @task do |f| %>
<div class="mb-3">
  <%= f.label :title, class:"form-label" %>
  <%= f.text_field :title, class: "form-control" %>
</div>
<div class="mb-3">
  <%= f.label :details, class:"form-label" %>
  <%= f.text_field :details, class: "form-control" %>
</div>
<div class="mb-3">
  <%= f.label :completed, class:"form-label" %>
  <%= f.text_field :completed, class: "form-control" %>
</div>
<%= f.submit %>
<% end %>

<p>
  <i class="fa-solid fa-rotate-left"></i><%= link_to "Back to list", tasks_path, class:"text-decoration-none"%>
</p>
